<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/MainHeader.ejs') %>

</head>

<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <%- include('../partials/spinner.ejs') %>
            <!-- Spinner End -->


            <!-- Sidebar Start -->
            <%- include('../partials/SuperAdminSidebar.ejs') %>
                <!-- Sidebar End -->


                <!-- Content Start -->
                <div class="content">
                    <!-- Navbar Start -->
                    <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-2">
                        <a href="#" class="sidebar-toggler flex-shrink-0">
                            <i class="fa fa-bars"></i>
                        </a>
                        <a href="" class="navbar-brand d-flex d-lg-none mx-1 me-4">
                            <img class="mb-0" src="/images/logomdcollege.png" alt="MD College" style="width: 100%;">
                        </a>
                    </nav>
                    <!-- Navbar End -->

                    <!-- Form Start -->
                    <div class="container-fluid pt-4 px-4">
                        <!-- message -->
                        <%- include("../partials/flashMessage.ejs") %>

                            <div class="row">
                                <div class="col-12">

                                    <div class="bg-light rounded p-4 mb-3">
                                        <h6 class="mb-4">Start New UG Regular Admission</h6>
                                        <form action="/super-admin/ug-regular-admission-post"
                                            enctype="multipart/form-data" method="post">

                                            <div class="row mb-3">
                                                <label for="courseSession" class="col-sm-3 col-md-4 col-form-label">New
                                                    Session :
                                                </label>
                                                <div class="col-sm-6 col-md-6">
                                                    <select name="courseSession" id="courseSession" class="form-select"
                                                        required>
                                                        <option value="" selected disabled>Select Session</option>
                                                        <option value="2024-2028">2024-2028</option>
                                                        <option value="2025-2029">2025-2029</option>
                                                        <option value="2026-2030">2026-2030</option>
                                                        <option value="2027-2031">2027-2031</option>
                                                        <option value="2028-2032">2028-2032</option>
                                                        <option value="2029-2033">2029-2033</option>
                                                    </select>
                                                </div>

                                            </div>
                                            <div class="row mb-3">
                                                <label for="sem" class="col-sm-3 col-md-4 col-form-label">New
                                                    Session :
                                                </label>
                                                <div class="col-sm-6 col-md-6">
                                                    <select name="sem" id="sem" class="form-select" required
                                                        onchange="toggleMeritListInput()">
                                                        <option value="" selected disabled>Select Semester</option>
                                                        <option value="Sem-1">Sem-1</option>
                                                        <option value="Sem-2">Sem-2</option>
                                                        <option value="Sem-3">Sem-3</option>
                                                        <option value="Sem-4">Sem-4</option>
                                                        <option value="Sem-5">Sem-5</option>
                                                        <option value="Sem-6">Sem-6</option>
                                                        <option value="Sem-7">Sem-7</option>
                                                        <option value="Sem-8">Sem-8</option>
                                                    </select>
                                                </div>

                                            </div>

                                            <div class="row mb-3">
                                                <label for="meritListFile"
                                                    class="col-sm-3 col-md-4 col-form-label">Upload Merit List :
                                                </label>
                                                <div class="col-sm-6 col-md-6">
                                                    <input type="file" class="form-control" id="meritListFile"
                                                        name="meritListFile" accept=".xlsx,.xls,.csv" required>
                                                </div>
                                            </div>

                                            <button type="submit" class="btn btn-primary">Start Admission</button>
                                        </form>
                                    </div>

                                    <div class="row bg-light rounded justify-content-center m-0 p-2"
                                        style="min-height: 40vh;">
                                        <section class="section">
                                            <div class="row">
                                                <!-- List starts Here     -->
                                                <div class="col-12">
                                                    <div class="bg-light rounded h-100 p-0">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div
                                                                class="d-flex gap-2 justify-content-center align-items-center">
                                                                <h6 class="my-3 ">
                                                                    All UG Regular Admission
                                                                </h6>


                                                            </div>
                                                            <div class="my-3">
                                                                <input type="text" class="form-control my-3"
                                                                    id="courseSessionFilter"
                                                                    placeholder="Search by Session">

                                                            </div>
                                                        </div>

                                                        <div class="table-responsive">
                                                            <table class="table">
                                                                <thead>
                                                                    <tr>
                                                                        <th scope="col">S.No.</th>
                                                                        <th scope="col">Session</th>
                                                                        <th scope="col">Sem 1</th>
                                                                        <th scope="col">Sem 2</th>
                                                                        <th scope="col">Sem 3</th>
                                                                        <th scope="col">Sem 4</th>
                                                                        <th scope="col">Sem 5</th>
                                                                        <th scope="col">Sem 6</th>
                                                                        <th scope="col">Sem 7</th>
                                                                        <th scope="col">Sem 8</th>
                                                                        <th scope="col">Action</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                    <% if (data.admPortalList) { %>
                                                                        <% data.admPortalList.reverse().forEach((element,
                                                                            index)=> {
                                                                            %>
                                                                            <tr>
                                                                                <th scope="row">
                                                                                    <%= index + 1%>
                                                                                </th>
                                                                                <td>
                                                                                    <%= element.courseSession%>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem1Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/1/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem2Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/2/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem3Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/3/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem4Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/4/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem5Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/5/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem6Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/6/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem7Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/7/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td>
                                                                                    <div class="form-check form-switch">
                                                                                        <input class="form-check-input"
                                                                                            type="checkbox"
                                                                                            <%=element.sem8Portal
                                                                                            ? 'checked' : '' %>
                    onchange="location.href='/super-admin/updatePortalStatus/8/<%= element._id %>'">
                                                                                    </div>
                                                                                </td>

                                                                                <td class="d-flex gap-2">

                                                                                    <a href="/super-admin/portalDetail/<%= element._id %>"
                                                                                        class="btn btn-sm btn-outline-primary"
                                                                                        data-bs-toggle="tooltip"
                                                                                        data-bs-placement="top"
                                                                                        title="View Details">
                                                                                        <i class="fas fa-eye"></i>
                                                                                    </a>

                                                                                    <a href="/super-admin/ug-regular-admission/updateMeritList"
                                                                                        class="btn btn-sm btn-outline-success"
                                                                                        data-bs-toggle="tooltip"
                                                                                        data-bs-placement="top"
                                                                                        title="Upload Excel">
                                                                                        <i class="fas fa-upload"></i>
                                                                                    </a>

                                                                                    <a href="javascript:void(0)"
                                                                                        onclick="confirmDelete('<%= element._id %>')"
                                                                                        class="btn btn-sm btn-outline-danger"
                                                                                        data-bs-toggle="tooltip"
                                                                                        data-bs-placement="top"
                                                                                        title="Delete">
                                                                                        <i class="fas fa-trash-alt"></i>
                                                                                    </a>
                                                                                </td>


                                                                            </tr>
                                                                            <% }); %>
                                                                                <% } %>
                                                                                    <tr id="noDataRow"
                                                                                        style="display: none;">
                                                                                        <td colspan="11"
                                                                                            class="text-center text-danger fw-bold">
                                                                                            No data found for the
                                                                                            selected session.</td>
                                                                                    </tr>

                                                                </tbody>
                                                            </table>
                                                            <% if (data.admPortalList) { %>
                                                                <% if (data.admPortalList.length===0) { %>
                                                                    <h3>Portal not found ...</h3>

                                                                    <% } %>
                                                                        <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!-- List ends Here     -->
                                            </div>
                                        </section>
                                    </div>



                                </div>
                            </div>
                    </div>

                    <!-- Form End -->


                    <!-- Footer Start -->
                    <%- include('../partials/BCAFooter.ejs') %>
                        <!-- Footer End -->
                </div>
                <!-- Content End -->


                <!-- Back to Top -->
                <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <%- include('../partials/BCAJSLibrary.ejs') %>

        <script>
            function toggleMeritListInput() {
                const semSelect = document.getElementById("sem");
                const fileInput = document.getElementById("meritListFile");

                if (semSelect.value === "Sem-1") {
                    fileInput.disabled = false;
                    fileInput.required = true;
                } else {
                    fileInput.disabled = true;
                    fileInput.required = false;
                }
            }

            // Run once on page load (for prefilled forms)
            window.addEventListener("DOMContentLoaded", () => {
                toggleMeritListInput();
            });

            function confirmDelete(id) {
                if (confirm("Are you sure you want to delete this admission portal?")) {
                    window.location.href = "/super-admin/ug-regular-admission/delete/" + id;
                }
            }
        </script>

        <script>
            document.getElementById("courseSessionFilter").addEventListener("input", function () {
                const filter = this.value.toUpperCase();
                const rows = document.querySelectorAll("table tbody tr");
                let matchFound = false;

                rows.forEach(row => {
                    const sessionCell = row.children[1]; // 2nd column is courseSession
                    // Skip the "no data" row
                    if (row.id === "noDataRow") return;

                    if (sessionCell) {
                        const text = sessionCell.textContent || sessionCell.innerText;
                        if (text.toUpperCase().includes(filter)) {
                            row.style.display = "";
                            matchFound = true;
                        } else {
                            row.style.display = "none";
                        }
                    }
                });

                // Show or hide the "No Data" row
                const noDataRow = document.getElementById("noDataRow");
                if (!matchFound) {
                    noDataRow.style.display = "";
                } else {
                    noDataRow.style.display = "none";
                }
            });
        </script>



</body>

</html>