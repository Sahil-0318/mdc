<%- include('./partials/header.ejs') %>

<!-- Sidebar Start -->
<%- include('./partials/sidebar.ejs')%>
<!-- Sidebar End -->

<!-- Content Start -->
<div class="content">

    <!-- Navbar Start -->
    <%- include('./partials/navbar.ejs')%>
    <!-- Navbar End -->

    <!-- Blank Start -->
    <div class="container-fluid pt-4 px-4">
        <% if(locals.submitted){ %>
            <div id="submitPopUp">
                <div class="col-12 col-md-10 alert alert-success" role="alert">
                    <%= locals.submitted %>
                </div>
            </div>               
        <% }%>

        <% if(locals.alreadysubmitted){ %>
            <div id="submitPopUp">
                <div class="col-12 col-md-10 alert alert-danger" role="alert">
                    <%= locals.alreadysubmitted %>
                </div>
            </div>                        
        <% }%>

        <div class="row">   
            <div class="col-12 col-md-10">
                <div class="bg-light rounded  p-4">
                    <h6 class="mb-4">Intermidiate Admission Form</h6>
                    <form action="/admissionForm" method="post" enctype="multipart/form-data">
                        <div class="col-md-12 mb-3">
                            <label for="fullName" class="form-label">1. Full Name</label>
                            <input type="text" class="form-control" id="fullName" name="fullName" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="registrationNumber" class="form-label">2. Roll Number</label>
                            <input type="number" class="form-control" id="registrationNumber" name="registrationNumber" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="session" class="form-label">3. Session (Eg. 2024-25)</label>
                            <input type="text" class="form-control" id="session" name="session" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="aadharNumber" class="form-label">4. AadharNumber</label>
                            <input type="number" class="form-control" id="aadharNumber" name="aadharNumber" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="dOB" class="form-label">5. Date Of Birth</label>
                            <input type="date" class="form-control" id="dOB" name="dOB" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="gender" class="form-label">6. Gender</label>
                            <select id="gender" class="form-select" name="gender" required>
                              <option value="Male">Male</option>
                              <option value="Female">Female</option>
                            </select>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="nationality" class="form-label">7. Nationality</label>
                            <select id="nationality" class="form-select" name="nationality" required>
                              <option value="Indian">Indian</option>
                              <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="category" class="form-label">8. Category</label>
                            <select id="category" class="form-select" name="category" required>
                              <option value="General">General</option>
                              <option value="BC-2">BC-2</option>
                              <option value="BC-1">BC-1</option>
                              <option value="SC">SC</option>
                              <option value="ST">ST</option>
                            </select>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="religion" class="form-label">9. Religion</label>
                            <select id="religion" class="form-select" name="religion"  required>
                              <option value="Hindu">Hindu</option>
                              <option value="Muslim">Muslim</option>
                              <option value="Sikh">Sikh</option>
                              <option value="Christian">Christian</option>
                              <option value="Other">Other</option>
                            </select>
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="fatherName" class="form-label">10. Father's Name / Guardian's Name</label>
                            <input type="text" class="form-control" id="fatherName" name="fatherName" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="motherName" class="form-label">11. Mother's Name</label>
                            <input type="text" class="form-control" id="motherName" name="motherName" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="parmanentAddress" class="form-label">12. Parmanent Address</label>
                            <input type="text" class="form-control" id="parmanentAddress" name="parmanentAddress" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="parmanentAddressPin" class="form-label">13. Parmanent Address Pin</label>
                            <input type="number" class="form-control" id="parmanentAddressPin" name="parmanentAddressPin" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="presentAddress" class="form-label">14. Present Address</label>
                            <input type="text" class="form-control" id="presentAddress" name="presentAddress" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="presentAddressPin" class="form-label">15. Present Address Pin</label>
                            <input type="number" class="form-control" id="presentAddressPin" name="presentAddressPin" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="mobileNumber" class="form-label">16. Mobile Number</label>
                            <input type="number" class="form-control" id="mobileNumber" name="mobileNumber" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="email" class="form-label">17. Email</label>
                            <input type="email" class="form-control" id="email" name="email" required />
                        </div>

                        <div class="col-md-12 mb-3">
                            <label for="course" class="form-label">18. Course</label>
                            <select id="course" class="form-select" name="course" required>
                              <option value="Arts">Arts</option>
                              <option value="Science">Science</option>
                              <!-- <option value="Commerce">Commerce</option> -->
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="photo" class="form-label">19. Passport Size Photo</label>
                            <input class="form-control form-control-sm" id="photo" name="photo" type="file" required>
                        </div>
                        <div class="mb-3">
                            <label for="studentSign" class="form-label">20. Student's Sign Photo</label>
                            <input class="form-control form-control-sm" id="studentSign" name="photo" type="file" required>
                        </div>

                        <button type="submit" class="btn btn-primary">Submit</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>

                    </form>                                                           
                </div>

                
                <% if (locals.appliedUser) { %>
                    
                    <form class="my-4" action="/getSlip" method="post">
                        <button type="submit" class="btn btn-primary">Get Slip</button>
                    </form>  
                <% } %>

            </div>
        </div>
    </div>

    <!-- Blank End -->


    <!-- Footer Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="bg-light rounded-top p-4">
            <div class="row">
                <div class="col-12 col-sm-6 text-center text-sm-start">
                    &copy; <a href="#">Maltidhari College Naubatpur, Patna</a>, All Right Reserved.
                </div>
                <div class="col-12 col-sm-6 text-center text-sm-end">
                    <!-- Designed By <a href="#">Tech & Hub</a> -->
                </div>
            </div>
        </div>
    </div>          
    <!-- Footer End -->

</div>
<!-- Content End -->


<!-- Back to Top -->
<a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
</div>

