<%- include('./partials/header.ejs') %>

    <!-- Sign In Start -->
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <% if(locals.invalid){ %>
                    <div id="submitPopUp">
                        <div class="alert alert-danger bg-danger text-light border-0 my-4 mx-3 fade show" role="alert">
                            <%= locals.invalid %>
                        </div>
                    </div>
                    <% }%>
                        <div class="bg-light rounded p-4 p-sm-5 my-4 mx-3">
                            <div class="d-flex flex-column gap-3 mb-3">
                                <img class="mb-0" src="/images/logomdcollege.png" alt="MD College" style="width: 100%;">

                                <h3 class="text-primary">BCA Part 1 Login</h3>
                            </div>
                            <form id="loginForm" action="/bca1Login" method="post">
                                <div class="form-floating mb-3">
                                    <input name="userId" type="text" class="form-control" id="userId"
                                        placeholder="Enter userId" oninput="this.value = this.value.toUpperCase()" required>
                                    <label for="userId">User Id</label>
                                </div>
                                <div class="form-floating mb-3">
                                    <input name="password" type="password" class="form-control" id="password"
                                        placeholder="Enter password" oninput="this.value = this.value.toUpperCase()" required>
                                    <label for="password">Password</label>
                                </div>
                                <div class="d-flex align-items-center justify-content-between mb-4">
                                    <a href="/forgotPassword/bcaPart1">Forgot Password</a>
                                </div>
                                <button type="submit" class="btn btn-primary py-3 w-100 mb-4">Log In</button>
                                <p class="text-center mb-0">Haven't Registered? <a href="/bca1Signup">Register</a>
                                </p>
                            </form>
                        </div>
            </div>
        </div>
    </div>
    <!-- Sign In End -->
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="../lib/chart/chart.min.js"></script>
    <script src="../lib/easing/easing.min.js"></script>
    <script src="../lib/waypoints/waypoints.min.js"></script>
    <script src="../lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="../lib/tempusdominus/js/moment.min.js"></script>
    <script src="../lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="../lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="../javascripts/main.js"></script>
    <script>
        const submitPopUp = document.querySelector('#submitPopUp')
        setInterval(() => {
            submitPopUp.innerHTML = ''
        }, 3000);
    </script>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </body>

    </html>