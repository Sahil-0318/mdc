                <div class="col-sm-12 col-xl-12 pt-4 px-4">
                    <form action="/bonafiedlist" method="get">
                        <div class="bg-light rounded h-100 p-3 d-flex flex-wrap gap-2">
                            <!-- filter category -->
                            <div>
                                <select id="courseName" class="form-select" name="courseName">
                                    <option value="all" selected>All Courses</option>
                                    <option value="I.A">I.A</option>
                                    <option value="I.Sc">I.Sc</option>
                                    <option value="B.A">B.A</option>
                                    <option value="B.Sc">B.Sc</option>
                                    <option value="BCA">BCA</option>
                                    <option value="BBA">BBA</option>
                                </select>
                            </div>

                            <div>
                                <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter full name" oninput="this.value = this.value.toUpperCase()" />
                            </div>

                            <div>
                                <input type="number" class="form-control" id="uniRegNumber" name="uniRegNumber" placeholder="Enter Uni. Reg. No" />
                            </div>

                            <div>
                                <input type="number" class="form-control" id="mobileNumber" name="mobileNumber" placeholder="Enter mobile No" />
                            </div>

                            <button class="btn btn-success" type="submit">Search</button>
                        </div>
                    </form>
                </div>

                <!-- Blank Start -->
                <div class="container-fluid pt-4 px-4">
                    <div class="row vh-100 bg-light rounded justify-content-center m-0 p-4">
                        <section class="section">
                            <div class="row">
                                <!-- List starts Here     -->
                                <div class="col-12">
                                    <div class="bg-light rounded h-100 p-0">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="my-3 ">
                                                Bonafied List (<%= locals.bonafiedlist.length %>)
                                            </h6>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th scope="col">S.No.</th>
                                                        <th scope="col">Full Name</th>
                                                        <th scope="col">Father's Name</th>
                                                        <th scope="col">Mobile No</th>
                                                        <th scope="col">Uni. Reg. No.</th>
                                                        <th scope="col">Course</th>
                                                        <th scope="col">Session</th>
                                                        <th scope="col">Download</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% if (locals.bonafiedlist) { %>
                                                        <% bonafiedlist.reverse().forEach((element, index)=> { %>
                                                            <tr>
                                                                <th scope="row">
                                                                    <%= index + 1%>
                                                                </th>
                                                                <td>
                                                                    <%= element.fullName%>
                                                                </td>
                                                                <td>
                                                                    <%= element.fatherName%>
                                                                </td>
                                                                <td>
                                                                    <%= element.mobileNumber%>
                                                                </td>
                                                                <td>
                                                                    <%= element.uniRegNumber%>
                                                                </td>
                                                                <td>
                                                                    <%= element.courseName%>
                                                                </td>
                                                                <td>
                                                                    <%= element.courseSession%>
                                                                </td>
                                                                <td>
                                                                    <a href="/bonafied/<%= element._id %>" class="px-4 btn btn-warning w-md ">Download</a>
                                                                </td>
                                                            </tr>
                                                            <% }); %>
                                                                <% } %>
                                                </tbody>
                                            </table>
                                            <% if (locals.bonafiedlist) { %>
                                                <% if (locals.bonafiedlist.length===0) { %>
                                                    <h3>Bonafied not found ...</h3>

                                                    <% } %>
                                                        <% } %>
                                        </div>
                                    </div>
                                </div>
                                <!-- List ends Here     -->
                            </div>
                        </section>
                    </div>
                </div>
                <!-- Blank End -->

                <!-- Footer Start -->
                <div class="container-fluid pt-4 px-4">
                    <div class="bg-light rounded-top p-4">
                        <div class="row">
                            <div class="col-12 col-sm-6 text-center text-sm-start">
