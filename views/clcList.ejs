                                <% if (locals.pending) { %>
                                    <% pending.forEach(element=> { %>
                                        <form action="/approvedByAdmin" method="post"
                                            class="form-group row g-3 needs-validation">
                                            <div class="col-md-2">
                                                <%= element.fName%>
                                                    <%= element.lName%>
                                            </div>

                                            <div class="col-md-2">
                                                <%= element.fatherName%>
                                            </div>

                                            <div class="col-md-2">
                                                <input name="registrationNumber" type="text" readonly="readonly"
                                                    value="<%= element.registrationNumber %>"
                                                    class="border-0 custom-file-input"></td>
                                            </div>

                                            <div class="col-md-2">
                                                <%= element.uniRollNumber%>
                                            </div>

                                            <div class="col-md-2">
                                                <%= element.dOB%>
                                            </div>

                                            <div class="col-md-2">
                                                <button type="submit" class="btn btn-success d-block">Approve</button>
                                            </div>
                                        </form>
                                        <% }); %>

                                            <% } %>

                            </div>
                        </section>
                    </div>
                </div>
