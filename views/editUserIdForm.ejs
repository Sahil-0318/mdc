<%- include('./partials/header.ejs') %>

    <!-- Sidebar Start -->
    <%- include('./partials/adminSidebar.ejs') %>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->

            <%- include('./partials/navbar.ejs') %>
                <!-- Navbar End -->


                <!-- Container -->
                <div class="container-fluid pt-4 px-4">
                    <div class="fw-bold mb-2 fs-3">Student Details :</div>
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="bg-light rounded p-4">
                                <!-- view start -->
                                <% if (locals.foundStudent) { %>
                                    <form class="row g-3" action="/editUserIdForm/<%= locals.foundStudent._id %>" method="post">
                                        <div class="col-md-12">
                                            <label for="" class="form-label fw-bold">Select Course</label>
                                            <select id="course" class="form-select" name="course">
                                                
                                                <option value="Bachelor of Arts (Social Science Subjects)" <%= locals.selectedValue === 'Bachelor of Arts (Social Science Subjects)' ? 'selected' : '' %>>Bachelor of Arts (Social Science Subjects)</option>

                                                <option value="Bachelor of Arts (Humanities Subjects)" <%= locals.selectedValue === 'Bachelor of Arts (Humanities Subjects)' ? 'selected' : '' %>>Bachelor of Arts (Humanities Subjects)</option>

                                                <option value="Bachelor of Science" <%= locals.selectedValue === 'Bachelor of Science' ? 'selected' : '' %>>Bachelor of Science</option>
                                            </select>
                                        </div>


                                        <div class="col-md-6">
                                            <label for="" class="form-label fw-bold">Reference Number</label>
                                            <textarea rows="1"
                                                class="form-control" name="referenceNumber"><%= locals.foundStudent.referenceNumber%></textarea>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="" class="form-label fw-bold">Mobile Number</label>
                                            <textarea rows="1"
                                                class="form-control" name="mobileNumber"><%= locals.foundStudent.mobileNumber%></textarea>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="" class="form-label fw-bold">User Id</label>
                                            <textarea rows="1"
                                                class="form-control" name="userId"><%= locals.foundStudent.userId%></textarea>
                                        </div>

                                        <div class="col-md-6">
                                            <label for="" class="form-label fw-bold">Password</label>
                                            <textarea rows="1"
                                                class="form-control" name="password"><%= locals.foundStudent.password%></textarea>
                                        </div>

                                        
                                        
                                        <button type="submit" class="col-md-2 btn btn-warning">Update</button>
                        
                                    </form>

                                    <% } %>

                                        <!-- view end -->

                            </div>
                        </div>

                    </div>
                </div>
                <!-- Sale & Revenue End -->


                <!-- Footer Start -->
                <div class="container-fluid pt-4 px-4">
                    <div class="bg-light rounded-top p-4">
                        <div class="row">
                            <div class="col-12 col-sm-6 text-center text-sm-start">
                                &copy; <a href="#">Maltidhari College Naubatpur, Patna</a>, All Right Reserved.
                            </div>
                            <div class="col-12 col-sm-6 text-center text-sm-end">
